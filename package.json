{
  "name": "ledgerpro",
  "version": "1.2.0",
  "description": "Ledger Pro - Comprehensive Accounting Software",
  "author": "Radium Technologies",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "vite --port 3000",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron": "electron .",
    "electron:build": "npm run build && electron-builder build --win --publish never",
    "electron:build:mac": "npm run build && electron-builder build --mac --publish never",
    "electron:build:linux": "npm run build && electron-builder build --linux --publish never",
    "package": "electron-builder build --publish never",
    "release": "electron-builder build --win --publish always"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.ledgerpro.app",
    "productName": "Ledger Pro",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.finance",
      "icon": "public/ledgerpro_icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "public/ledgerpro_icon.png"
    },
    "linux": {
      "target": "deb",
      "category": "Office",
      "icon": "public/ledgerpro_icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "yourusername",
      "repo": "ledgerpro",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@mantine/core": "6.0.22",
    "@mantine/dates": "6.0.22",
    "@mantine/form": "6.0.22",
    "@mantine/hooks": "6.0.22",
    "@mantine/modals": "6.0.22",
    "@mantine/notifications": "6.0.22",
    "@tabler/icons-react": "^2.0.0",
    "@types/uuid": "^10.0.0",
    "chart.js": "^4.0.0",
    "dayjs": "^1.11.9",
    "jspdf": "^3.0.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.0.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.0",
    "uuid": "^11.1.0",
    "electron-dl": "^3.5.2",
    "zustand": "^4.3.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^32.3.3",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "wait-on": "^7.2.0"
  }
}
